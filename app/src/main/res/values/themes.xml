<resources>
    <!-- Base application theme. -->
    <style name="Theme.VaultApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_500</item>
        <item name="colorSecondaryVariant">@color/secondary_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primary_500</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="actionModeCloseButtonStyle">@style/NoCloseButtonActionModeStyle</item>

        <item name="snackbarStyle">@style/Widget.MaterialComponents.Snackbar.FullWidth</item>
    </style>

    <style name="NoCloseButtonActionModeStyle">
        <item name="android:visibility">gone</item>
    </style>

    <style name="Theme.VaultApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="Theme.VaultApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VaultApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>